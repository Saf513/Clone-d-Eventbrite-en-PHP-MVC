{# views/profile/index.twig #}
{# {% extends "" %} #}
{% block title %}Profile{% endblock %}
{% block content %}
    <h1>Profile</h1>
    <div class="flex space-x-4">
        <div class="w-1/3">
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h3 class="text-lg font-semibold mb-4">Informations Personnelles</h3>
                <div class="space-y-4">
                    <div class="flex items-center">
                        <img src="{{ user.avatar|default(asset('img/default-avatar.png')) }}"
                            alt="Avatar"
                            class="w-10 h-10 rounded-full">
                        <div class="ml-4">
                            <p class="font-medium">{{ user.name }}</p>
                            <p class="text-sm text-gray-500">{{ user.email }}</p>
                        </div>
                    </div>
                    <div>
                        <p class="font-medium">Rôle</p>
                        <p class="text-sm text-gray-500">{{ user.role }}</p>
                    </div>
                    <div>
                        <p class="font-medium">Nom d'utilisateur</p>
                        <p class="text-sm text-gray-500">{{ user.username }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="w-2/3">
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h3 class="text-lg font-semibold mb-4">Modifier les informations</h3>
                <form action="/profile/update" method="post">
                    <div class="space-y-4">
                        <div>
                            <label for="fullName" class="block font-medium">Nom complet</label>
                            <input type="text" id="fullName" name="fullName" value="{{ user.name }}"
                                class="w-full p-2 border rounded" readonly>
                        </div>
                        <div>
                            <label for="email" class="block font-medium">Email</label>
                            <input type="email" id="email" name="email" value="{{ user.email }}"
                                class="w-full p-2 border rounded" readonly>
                        </div>
                        <div>
                            <label for="role" class="block font-medium">Rôle</label>
                            <input type="text" id="role" name="role" value="{{ user.role }}"
                                class="w-full p-2 border rounded" readonly>
                        </div>
                        <div>
                            <label for="username" class="block font-medium">Nom d'utilisateur</label>
                            <input type="text" id="username" name="username" value="{{ user.username }}"
                                class="w-full p-2 border rounded" readonly>
                        </div>
                    </div>
                    <div class="mt-4">
                        <button type="button" id="editButton" class="bg-blue-500 text-white px-4 py-2 rounded">Modifier</button>
                        <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded">Enregistrer</button>
                        <button type="reset" class="bg-red-500 text-white px-4 py-2 rounded">Réinitialiser</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        const editButton = document.getElementById('editButton');
        const fullName = document.getElementById('fullName');
        const email = document.getElementById('email');
        const role = document.getElementById('role');
        const username = document.getElementById('username');

        editButton.addEventListener('click', () => {
            fullName.removeAttribute('readonly');
            email.removeAttribute('readonly');
            role.removeAttribute('readonly');
            username.removeAttribute('readonly');
        });
    </script>
{% endblock %}