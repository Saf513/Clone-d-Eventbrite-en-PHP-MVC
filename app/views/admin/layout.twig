<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin - {{ app_name }}{% endblock %}</title>
    
    {# CSS #}
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/public/assets/css/style.css">
    
    {% block stylesheets %}
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
    {% endblock %}
</head>
<body class="bg-gray-50">
    {# Message Flash #}
    {% if flash %}
        <div class="fixed top-4 right-4 z-50">
            {% for type, messages in flash %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }} mb-2 p-4 rounded shadow-lg 
                        {% if type == 'success' %}bg-green-100 text-green-800 border-green-200
                        {% elseif type == 'error' %}bg-red-100 text-red-800 border-red-200
                        {% else %}bg-blue-100 text-blue-800 border-blue-200{% endif %}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    {% endif %}

    <div class="flex h-screen">
        {# Sidebar #}
        {% include 'admin/components/sidebar.twig' %}

        {# Contenu Principal #}
        {% block content %}{% endblock %}
    </div>

    {# JavaScript #}
    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            // Gestion des messages flash
            document.addEventListener('DOMContentLoaded', function() {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(alert => {
                    setTimeout(() => {
                        alert.style.opacity = '0';
                        setTimeout(() => alert.remove(), 300);
                    }, 5000);
                });
            });
        </script>
    {% endblock %}
</body>
</html>